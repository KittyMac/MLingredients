<?xml version="1.0" encoding="UTF-8"?>
<Scene id="root" xmlns="http://schema.smallplanet.com/PlanetUI">
    <Constraint firstItem="root" ruleSet="fillSuperview" />
    
    <View id="background" backgroundColor="#EEEEEEFF" />
    <Constraint firstItem="background" ruleSet="fillSuperview" />
    
    <ImageView id="preview" contentMode="scaleAspectFit" backgroundColor="#000000FF" shadowRadius="4" shadowOffset="0,3" shadowColor="#000000FF" shadowOpacity="0.5" />
    <Constraint firstItem="preview" firstAttribute="width" secondItem="root" secondAttribute="width" multiplier="1.0"/>
    <Constraint firstItem="preview" firstAttribute="height" secondItem="root" secondAttribute="height" constant="-150"/>
    <Constraint firstItem="preview" firstAttribute="top" secondItem="root" secondAttribute="top" constant="60" />
    
    <StackView id="stack4" backgroundColor="#CCCCCCFF" distribution="equalSpacing" alignment="top" >
        
    </StackView>
    <Constraint firstItem="stack4" firstAttribute="top" secondItem="preview" secondAttribute="bottom" constant="15" />
    <Constraint firstItem="stack4" firstAttribute="left" secondItem="root" secondAttribute="left" constant="10"/>
    <Constraint firstItem="stack4" firstAttribute="right" secondItem="root" secondAttribute="right" constant="-10"/>
    <Constraint firstItem="stack4" firstAttribute="height" constant="60" />

</Scene>
