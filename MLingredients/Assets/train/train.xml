<?xml version="1.0" encoding="UTF-8"?>
<Scene id="root" xmlns="http://schema.smallplanet.com/PlanetUI">
    <Constraint firstItem="root" ruleSet="fillSuperview" />
    
    <View id="background" backgroundColor="#EEEEEEFF" />
    <Constraint firstItem="background" ruleSet="fillSuperview" />
    
    <ImageView id="preview" contentMode="scaleAspectFit" backgroundColor="#000000FF" shadowRadius="4" shadowOffset="0,3" shadowColor="#000000FF" shadowOpacity="0.5" />
    <Constraint firstItem="preview" firstAttribute="width" secondItem="root" secondAttribute="width" multiplier="1.0"/>
    <Constraint firstItem="preview" firstAttribute="height" secondItem="root" secondAttribute="height" multiplier="0.2"/>
    <Constraint firstItem="preview" firstAttribute="top" secondItem="root" secondAttribute="top" constant="60" />
    
    <Label id="predictionLabel" styleId="PredictionLabel" numberOfLines="1" />
    <Constraint firstItem="predictionLabel" firstAttribute="width" constant="80"/>
    <Constraint firstItem="predictionLabel" firstAttribute="height" constant="40"/>
    <Constraint firstItem="predictionLabel" firstAttribute="top" secondItem="preview" secondAttribute="top" />
    <Constraint firstItem="predictionLabel" firstAttribute="left" secondItem="preview" secondAttribute="left" />
    
    <Button id="nextObservation" title="->" styleId="ButtonStd" />
    <Constraint firstItem="nextObservation" firstAttribute="width" constant="80"/>
    <Constraint firstItem="nextObservation" firstAttribute="height" constant="40"/>
    <Constraint firstItem="nextObservation" firstAttribute="top" secondItem="preview" secondAttribute="top" constant="10" />
    <Constraint firstItem="nextObservation" firstAttribute="right" secondItem="root" secondAttribute="right" constant="-10"/>
    
    <View id="buttonsContainer" />
    <Constraint firstItem="buttonsContainer" firstAttribute="width" secondItem="root" secondAttribute="width" multiplier="1.0"/>
    <Constraint firstItem="buttonsContainer" firstAttribute="height" secondItem="root" secondAttribute="height" multiplier="0.8"/>
    <Constraint firstItem="buttonsContainer" firstAttribute="top" secondItem="preview" secondAttribute="bottom" />
    <Constraint firstItem="buttonsContainer" firstAttribute="left" secondItem="preview" secondAttribute="left" />



    
    
</Scene>
